def repoUrl= "https://<%= @s2gitblit_server %>:<%= s2gitblit_server_port %>/git/" + repository + ".git"

devRegex = /^.*Development.*/
testRegex = /^.*Testing.*/
prodRegex = /^.*Production.*/

println repoUrl
json='{"repository":{"url":"'+repoUrl+'"}}'
println json

if (repoUrl ==~ devRegex) {

        def response = ["curl", "-k", "-X", "POST", "-H", "Content-Type: application/json", "-d", "${json}", "https://<%= @usrmgt_username %>:<%= @usrmgt_password %>@<%= @stratos_server %>:<%= @stratos_server_port %>/stratos/admin/reponotification"].execute().text
        println response

