        def response = ["curl", "-k", "-X", "POST", "-H", "Content-Type: application/json", "-d", "${json}", "https://<%= @usrmgt_username %>:<%= @usrmgt_password %>@<%= @stratos_server %>:<%= @stratos_server_port %>/stratos/admin/reponotification"].execute().text
        println response

} else if (repoUrl ==~ prodRegex) {

        def response = ["curl", "-k", "-X", "POST", "-H", "Content-Type: application/json", "-d", "${json}", "https://<%= @usrmgt_username %>:<%= @usrmgt_password %>@<%= @stratos_server %>:<%= @stratos_server_port %>/stratos/admin/reponotification"].execute().text
        println response

}
